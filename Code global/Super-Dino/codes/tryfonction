import pygame
from pygame.locals import *

pygame.init()

#définition des fonctions principales


def quitter() :
#Si l'utilisateur quitte, on met les variables 
#de boucle à 0 pour n'en parcourir aucune et fermer
    for event in pygame.event.get():
            if event.type == QUIT:
                pygame.quit()
                continuer = 0
                continuer_accueil = 0
                continuer_jeu = 0


#MOUSEBUTTONDOWN signifie le clique, button 1 le bouton gauche
#event.pos[0] = position abscisse et event.pos[1] = position ordonnée
    
    
#PROGRAMME PRINCIPALE

#Initialisation Interface

LongueurInterface = 640
LargeurInterface = 480
fenetre = pygame.display.set_mode((LongueurInterface, LargeurInterface), RESIZABLE)


#Titre fenêtre
pygame.display.set_caption("Super Dino")


#BOUCLE PRINCIPALE
continuer = 1

#Afficher l'écran d'accueil

fond = pygame.image.load("interfacebeta.jpg")
fenetre.blit(fond,(0,0))

while continuer:
    #On définie les boucles du jeu
    continuer_accueil = 1
    continuer_jeu = 1

    #BOUCLE D'ACCUEIL
    while continuer_accueil:
        quitter()
        
        jouer = pygame.image.load("startgame.png")
        fenetre.blit(jouer, (64,168))

        pygame.display.update()
        pygame.display.flip()

        if event.type == MOUSEBUTTONDOWN and event.button == 1 and event.pos[0] >= 41 and event.pos[0] <= 322 and event.pos[1] >= 73 and event.pos[1] >= 265 :
           quitter() 

        
        
    
    
